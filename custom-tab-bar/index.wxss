.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  background: #FFF;
  display: flex;
  line-height: 1.2;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 2rpx solid #e6e6e6;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.tab-bar-item .image {
  width: 54rpx;
  height: 54rpx;
}
.bulge {
  background-color: #FFF;
}
.bulge .tab-bar-bulge {
  position: absolute;
  z-index: -1;
  top: -48rpx;
  width: 140rpx;
  height: 120rpx;
  border-radius: 50%;
  border-top: 2rpx solid #e6e6e6;
  background-color: #FFF;
}
.bulge .image{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: -44rpx;
  padding-top: 8rpx;
  padding-bottom:60rpx
}
.bulge .tab-bar-view {
  padding-top: 52rpx;
}
.tab-bar-item .tab-bar-view {
  font-size: 20rpx;
}